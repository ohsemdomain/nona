		"lucide-react": "^0.468.0",
		"nanoid": "^5.0.9",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-error-boundary": "^6.0.3",
		"react-hot-toast": "^2.4.1",
		"react-router-dom": "^7.1.1",
