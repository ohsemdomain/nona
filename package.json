{
	"name": "nona",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --host --port=5655",
		"build": "tsc -b && vite build",
		"deploy": "bun run build && wrangler deploy",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply DB --local",
		"db:migrate:prod": "wrangler d1 migrations apply DB --remote",
		"db:studio": "drizzle-kit studio",
		"db:seed-rbac": "wrangler d1 execute DB --local --file=scripts/seed-rbac.sql",
		"db:seed-admin": "bun run scripts/seed-admin.ts",
		"db:reset": "bun run scripts/db-reset.ts"
	},
	"dependencies": {
